  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "librespot pipe",
      "cargo": {
        "args": ["build", "--bin=librespot", "--package=librespot"],
        "filter": {
          "name": "librespot",
          "kind": "bin"
        }
      },
      "args": ["-n", "Librespot Test", "--verbose", "--backend", "pipe", "--device", "/dev/null", "--passthrough"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "librespot correct",
      "cargo": {
        "args": ["build", "--bin=librespot", "--package=librespot"],
        "filter": {
          "name": "librespot",
          "kind": "bin"
        }
      },
      "args": ["-n", "Librespot Working", "--verbose"],
      "cwd": "${workspaceFolder}"
    }
  ]
}
